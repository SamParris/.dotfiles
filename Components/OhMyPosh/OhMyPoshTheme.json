{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 2,
    "var": {
        "dotfiles": "$ENV:dotfiles_update_available"
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#5ef1ff",
                    "template": "\u256d("
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#808080",
                    "properties": {
                        "time_format": "03:04 PM"
                    }
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#bd5eff",
                    "template": "{{ .UserName }}"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#FAFA33",
                    "template": "{{ if .Env.DOTFILES_UPDATE_AVAILABLE }} \udb85\udc5f{{ end }}"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#FAFA33",
                    "template": "{{ if .Env.SOFTWARE_UPDATE_AVAILABLE }} \udb86\uddd5{{ end }}"
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#5ef1ff",
                    "template": " )-["
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#80ED99",
                    "template": "{{ if gt .StackCount 0 }}{{ .StackCount }}{{ end }} "
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#d0d0d0",
                    "template": "{{ .Path }}",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "agnoster_short"
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground": "#FFBF00",
                    "template": " \ue725 {{ .Ref }}",
                    "properties": {
                        "fetch_status": true
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground": "#59eb67",
                    "template": "{{ if .Working.Untracked }} \udb81\udf04 {{ .Working.Untracked }}{{ end }}",
                    "properties": {
                        "fetch_status": true
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground": "#d59f57",
                    "template": "{{ if .Working.Modified }} \udb82\udded {{ .Working.Modified }}{{ end }}",
                    "properties": {
                        "fetch_status": true
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground": "#ac4a75",
                    "template": "{{ if .Staging.Changed }} \udb82\udfeb {{ .Staging.Added }}{{ end }}",
                    "properties": {
                        "fetch_status": true
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground": "#ac4a75",
                    "template": "{{ if .Staging.Changed }} \udb83\udc0f {{ .Staging.Modified }}{{ end }}",
                    "properties": {
                        "fetch_status": true
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground": "#98fb98",
                    "template": "{{ if gt .Ahead 0 }} \udb81\udf39 {{ .Ahead }}{{ end }}",
                    "properties": {
                        "fetch_status": true
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground": "#FAFA33",
                    "template": "{{ if gt .Behind 0 }} \udb85\udc5f {{ .Behind }}{{ end }}",
                    "properties": {
                        "fetch_status": true
                    }
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#5ef1ff",
                    "template": "]"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#5ef1ff",
                    "template": "\u2570"
                },
                {
                    "type": "status",
                    "style": "plain",
                    "foreground": "#5eff6c",
                    "foreground_templates": [
                        "{{ if .Error }}#EF476F{{ end }}"
                    ],
                    "template": "‚ùØ",
                    "properties": {
                        "always_enabled": true
                    }
                }
            ]
        }
    ]
}