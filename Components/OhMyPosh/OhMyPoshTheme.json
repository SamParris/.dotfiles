{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 2,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#0AD1C8",
                    "template": "\u256d("
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#808080",
                    "properties": {
                        "time_format": "03:04 PM"
                    }
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#0CA0D8",
                    "template": "{{ .UserName }}"
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#0AD1C8",
                    "template": " )-["
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#80ED99",
                    "template": "{{ if gt .StackCount 0 }}{{ .StackCount }}{{ end }} "
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#d0d0d0",
                    "template": "{{ .Path }}",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "agnoster_short"
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffdd5b{{ end }} ",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }} ",
                        "{{ if gt .Ahead 0 }}#98FB98{{ end }} ",
                        "{{ if gt .Behind 0 }}#B388FB{{ end }} "
                    ],
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}",
                    "properties": {
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    }
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#0AD1C8",
                    "template": "]"
                },
                {
                    "type": "status",
                    "style": "plain",
                    "foreground": "#EF476F",
                    "template": "{{ if .Error }} [ERROR]{{ end }}",
                    "properties": {
                        "always_enabled": false
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#0AD1C8",
                    "template": "\u2570"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#fa7ef8",
                    "template": "$:"
                }
            ]
        }
    ]
}